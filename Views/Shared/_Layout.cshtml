<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - InventoryManagementSystem</title>

    <!-- Bootstrap & Icon -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
        background: #f5f7fa;
    }

    /* Sidebar */
    .sidebar {
        min-height: 100vh;
        background: linear-gradient(180deg, #1a1a1a, #1d4ed8);
        color: #fff;
        position: fixed;
        width: 220px;
        transition: all 0.3s ease;
        padding-top: 14px;
    }

    .sidebar.collapsed {
        width: 70px;
    }

    /* REMOVE old brand styling usage (do not use .navbar-brand inside sidebar anymore) */
    .sidebar .navbar-brand {
        display: none;
    }

    /* New Brand */
    .sidebar-brand {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 12px;

        margin: 10px 12px 18px;
        padding: 12px 14px;

        color: #fff;
        text-decoration: none;

        border-radius: 14px;
        background: rgba(255, 255, 255, 0.10);

        overflow: hidden;
        white-space: nowrap;
        transition: all 0.25s ease;
    }

    .sidebar-brand:hover {
        background: rgba(255, 255, 255, 0.16);
        color: #fff;
    }

    .brand-icon {
        width: 38px;
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;

        border-radius: 12px;
        background: rgba(255, 255, 255, 0.14);
        flex: 0 0 auto;
    }

    .brand-icon i {
        font-size: 1.2rem;
    }

    .brand-text {
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: -1px;
        line-height: 1;
    }

    /* Nav links */
    .sidebar a.nav-link {
        color: #ffffffaa;
        font-weight: 500;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        border-radius: 12px;
        margin: 4px 10px;
        transition: all 0.2s;
        white-space: nowrap;
    }

    .sidebar a.nav-link i {
        font-size: 1.2rem;
        margin-right: 12px;
    }

    .sidebar a.nav-link:hover,
    .sidebar a.nav-link.active {
        background: rgba(255, 255, 255, 0.15);
        color: #fff;
    }

    .sidebar .tooltip-inner {
        background-color: #1d4ed8;
        color: #fff;
    }

    /* Collapsed behavior */
    .sidebar.collapsed .link-text {
        display: none;
    }

    .sidebar.collapsed .brand-text {
        display: none;
    }

    .sidebar.collapsed .sidebar-brand {
        justify-content: center;
        padding: 12px 10px;
        margin: 10px 12px 18px;
    }

    /* Buttons in sidebar */
    .sidebar .btn {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sidebar.collapsed .btn {
        width: 50px;
    }

    /* Content */
    .content {
        margin-left: 220px;
        padding: 2rem;
        transition: margin-left 0.3s;
    }

    .content.collapsed {
        margin-left: 70px;
    }

    .navbar-custom {
        background: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border-radius: 0.5rem;
    }

    .card-dashboard {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        padding: 1.5rem;
        transition: all 0.25s;
    }

    .card-dashboard:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
    }

    #sidebarToggle {
        cursor: pointer;
        font-size: 1.5rem;
    }
</style>

</head>
<body>

<!-- Sidebar -->
<div class="sidebar d-flex flex-column" id="sidebar">
 <a class="sidebar-brand" asp-controller="Dashboard" asp-action="Index">
     <span class="brand-icon"><i class="bi bi-grid-1x2-fill"></i></span>
     <span class="brand-text">DAIM System</span>
 </a>


    <nav class="nav flex-column">
        <a class="nav-link active" href="/Dashboard" data-bs-toggle="tooltip" title="Dashboard">
            <i class="bi bi-speedometer2"></i> <span class="link-text">Dashboard</span>
        </a>

        <a class="nav-link" href="/Inventory" data-bs-toggle="tooltip" title="Inventory">
            <i class="bi bi-box-seam"></i> <span class="link-text">Inventory</span>
        </a>
        <a class="nav-link" href="/Order" data-bs-toggle="tooltip" title="Orders">
            <i class="bi bi-bag-check"></i> <span class="link-text">Orders</span>
        </a>
        <a class="nav-link" href="/Supplier" data-bs-toggle="tooltip" title="Suppliers">
            <i class="bi bi-truck"></i> <span class="link-text">Suppliers</span>
        </a>
        <a class="nav-link" href="/Customers" data-bs-toggle="tooltip" title="Customers">
            <i class="bi bi-people-fill"></i> <span class="link-text">Customers</span>
        </a>
        <a class="nav-link" href="/Report" data-bs-toggle="tooltip" title="Reports">
            <i class="bi bi-graph-up"></i> <span class="link-text">Reports</span>
        </a>
       
    </nav>

    <div class="mt-auto p-3">
        <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center">
            <i class="bi bi-box-arrow-right"></i>
            <span class="link-text ms-2">Logout</span>
        </a>

        <div class="mt-2 text-center">
            <i id="sidebarToggle" class="bi bi-list"></i>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="content" id="mainContent">
    <nav class="navbar navbar-expand navbar-custom mb-4 rounded-3">
        <div class="container-fluid">
            <span class="navbar-text fs-5 fw-semibold">
                @ViewData["Title"]
            </span>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>
</div>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    });

    // Sidebar collapse
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');
    const toggleBtn = document.getElementById('sidebarToggle');

    toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        mainContent.classList.toggle('collapsed');
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
