@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Customers";
}
@model IEnumerable<InventoryManagementSystem.Models.Customer>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary"><i class="bi bi-people-fill me-2"></i> Customers</h2>
    <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
        <i class="bi bi-plus-circle me-2"></i> New Customer
    </a>
</div>

<div class="card shadow-lg rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th class="text-center" style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var c in Model)
                        {
                            <tr class="align-middle">
                                <td class="fw-semibold">@c.Name</td>
                                <td>@c.Phone</td>
                                <td>@c.Email</td>
                                <td>@c.Address</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@c.Id" 
                                       class="btn btn-sm btn-warning rounded-pill me-1 shadow-sm" 
                                       data-bs-toggle="tooltip" title="Edit Customer">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                                        <button class="btn btn-sm btn-danger rounded-pill shadow-sm" 
                                                onclick="return confirm('Delete this customer?')" 
                                                data-bs-toggle="tooltip" title="Delete Customer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">
                                <i class="bi bi-info-circle me-2"></i>No customers found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
