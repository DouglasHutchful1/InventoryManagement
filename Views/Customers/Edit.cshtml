@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model?.Id == 0 ? "New Customer" : "Edit Customer";
}
@model InventoryManagementSystem.Models.Customer

<div class="container my-5">
    <div class="card shadow-lg mx-auto" style="max-width:700px; border-radius:12px;">
        <div class="card-header bg-gradient-primary text-mute fw-bold fs-5 d-flex align-items-center justify-content-between" style="border-top-left-radius:12px; border-top-right-radius:12px;">
            @(Model?.Id == 0 ? "New Customer" : "Edit Customer")
            <i class="bi bi-person-plus-fill fs-4"></i>
        </div>
        <div class="card-body p-4">
            <form asp-action="@(Model?.Id == 0 ? "Create" : "Edit")" method="post" class="needs-validation" novalidate>
                
                <!-- Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control rounded-3 shadow-sm" placeholder="Customer Name" />
                    <label asp-for="Name">Full Name</label>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Phone & Email -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Phone" class="form-control rounded-3 shadow-sm" placeholder="Phone Number" />
                            <label asp-for="Phone">Phone</label>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control rounded-3 shadow-sm" placeholder="Email Address" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Address -->
                <div class="form-floating mb-4">
                    <textarea asp-for="Address" class="form-control rounded-3 shadow-sm" placeholder="Customer Address" style="height:90px;"></textarea>
                    <label asp-for="Address">Address</label>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm rounded-3">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success btn-lg shadow-sm rounded-3">
                        <i class="bi bi-check-circle me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
