@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DAIM System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.14);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border-radius: 22px;
            padding: 44px 34px;
            max-width: 440px;
            width: 100%;
            box-shadow: 0 18px 50px rgba(0,0,0,0.25);
            text-align: center;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .auth-card h4 {
            font-weight: 700;
            color: rgba(255,255,255,0.75);
            margin-bottom: 6px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .auth-card h1 {
            font-weight: 800;
            color: #fff;
            margin-bottom: 22px;
            font-size: 2rem;
        }

        .muted-help {
            color: rgba(255,255,255,0.75);
            font-size: 0.95rem;
            margin-bottom: 16px;
        }

        .input-group-text {
            background: rgba(255,255,255,0.20);
            border: 1px solid rgba(255,255,255,0.35);
            border-right: 0;
            color: #ffffff;
            border-radius: 12px 0 0 12px;
            padding: 0.7rem 0.9rem;
        }

        .form-control, .form-select {
            background: rgba(255,255,255,0.20);
            border: 1px solid rgba(255,255,255,0.35);
            border-left: 0;
            border-radius: 0 12px 12px 0;
            color: #fff;
            padding: 0.7rem 0.9rem;
        }

        .form-control::placeholder {
            color: rgba(255,255,255,0.75);
        }

        .form-control:focus, .form-select:focus {
            outline: none;
            background: rgba(255,255,255,0.32);
            box-shadow: 0 0 0 0.2rem rgba(255,255,255,0.20);
            color: #fff;
        }

        .field-label {
            color: rgba(255,255,255,0.80);
            font-weight: 600;
            font-size: 0.9rem;
            text-align: left;
            display: block;
            margin: 10px 0 6px;
        }

        .btn-modern {
            border-radius: 14px;
            padding: 12px 0;
            font-weight: 700;
            background: linear-gradient(135deg, #0f2f8f, #2563eb);
            border: none;
            color: #fff;
            font-size: 16px;
            width: 100%;
            box-shadow: 0 10px 28px rgba(0,0,0,0.22);
            transition: transform .15s ease, box-shadow .15s ease, background .15s ease;
        }

        .btn-modern:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            transform: translateY(-1px);
            box-shadow: 0 14px 34px rgba(0,0,0,0.28);
        }

        .btn-link-light {
            color: rgba(255,255,255,0.85);
            text-decoration: none;
            font-weight: 600;
        }

        .btn-link-light:hover {
            color: #fff;
            text-decoration: underline;
        }

        #Label_Message {
            margin: 10px 0 14px;
            font-weight: 600;
            color: #ffd1d1;
            font-size: 0.95rem;
            min-height: 20px;
        }

        #toastContainer .toast {
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            font-weight: 600;
        }
    </style>
</head>
<body>

<section class="w-100 px-3">
    <div class="auth-card mx-auto">
        <h4>DAIM System</h4>
        <h1>Create Account</h1>
        <div class="muted-help">Fill in your details to register.</div>

        <div id="Label_Message"></div>

        <form id="RegisterForm" autocomplete="off">
            <label class="field-label">First Name</label>
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                <input type="text" id="regFirstname" class="form-control" placeholder="e.g. Douglas" required />
            </div>

            <label class="field-label">Surname</label>
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
                <input type="text" id="regSurname" class="form-control" placeholder="e.g. Mensah" required />
            </div>

            <label class="field-label">Username</label>
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-at"></i></span>
                <input type="text" id="regUsername" class="form-control" placeholder="Enter your username" required />
            </div>

            <label class="field-label">Email</label>
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                <input type="email" id="regEmail" class="form-control" placeholder="name@email.com" required />
            </div>

            <label class="field-label">Password</label>
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                <input type="password" id="regPassword" class="form-control" placeholder="Create a password" required />
            </div>

            <label class="field-label">Confirm Password</label>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                <input type="password" id="regConfirmPassword" class="form-control" placeholder="Repeat password" required />
            </div>

            <button type="button" id="Button_Register" class="btn btn-modern">
                <span class="spinner-border spinner-border-sm d-none me-2" id="registerSpinner" role="status" aria-hidden="true"></span>
                Register
            </button>
        </form>

        <div class="mt-3">
            <span class="text-white-50">Already have an account?</span>
            <a class="btn-link-light ms-1" href="@Url.Action("Index","Home")">Login</a>
        </div>
    </div>
</section>

<div id="toastContainer" style="position: fixed; top: 20px; right: 20px; z-index:1055;"></div>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(function () {
        function showToast(message, type = 'info', delay = 4000) {
            const bgClass = { success: 'bg-success', danger: 'bg-danger', info: 'bg-info', warning: 'bg-warning' }[type] || 'bg-info';
            const toastId = 'toast_' + Date.now();
            const toastHTML = `
                <div id="${toastId}" class="toast ${bgClass} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>`;
            $("#toastContainer").append(toastHTML);
            const toastEl = document.getElementById(toastId);
            const bsToast = new bootstrap.Toast(toastEl, { delay: delay });
            bsToast.show();
            toastEl.addEventListener('hidden.bs.toast', function () { toastEl.remove(); });
        }

        function setBusy(isBusy) {
            $("#Button_Register").prop("disabled", isBusy);
            $("#registerSpinner").toggleClass("d-none", !isBusy);
        }

        function performRegister() {
            $("#Label_Message").html("");

            const firstname = $("#regFirstname").val().trim();
            const surname = $("#regSurname").val().trim();
            const username = $("#regUsername").val().trim();
            const email = $("#regEmail").val().trim();
            const pwd = $("#regPassword").val();
            const confirm = $("#regConfirmPassword").val();

            if (!firstname || !surname || !username || !email || !pwd || !confirm) {
                $("#Label_Message").html('<strong>Please fill in all fields.</strong>');
                return;
            }

            if (pwd.length < 6) {
                $("#Label_Message").html('<strong>Password must be at least 6 characters.</strong>');
                return;
            }

            if (pwd !== confirm) {
                $("#Label_Message").html('<strong>Passwords do not match.</strong>');
                showToast("Passwords do not match.", "danger");
                return;
            }

            const data = {
                Firstname: firstname,
                Surname: surname,
                Username: username,
                Email: email,
                Password: pwd,
                ConfirmPassword: confirm
            };

            setBusy(true);

            $.ajax({
                type: "POST",
                url: "/Home/Register",
                contentType: "application/json",
                dataType: "json",
                data: JSON.stringify(data)
            })
            .done(function (res) {
                // Your controller returns: { success = true, message = "...", id = ... }
                if (res && res.success) {
                    showToast(res.message || "Registration successful. You can now log in.", "success");
                    setTimeout(function () {
                        window.location.href = "@Url.Action("Index","Home")";
                    }, 900);
                } else {
                    const msg = (res && (res.message || res.Message)) || "Registration failed.";
                    $("#Label_Message").html(`<strong>${msg}</strong>`);
                    showToast(msg, "danger");
                }
            })
            .fail(function (xhr) {
                const msg = xhr.responseJSON?.message
                    || xhr.responseJSON?.Message
                    || "Registration failed. Please try again.";
                $("#Label_Message").html(`<strong>${msg}</strong>`);
                showToast(msg, "danger");
            })
            .always(function () {
                setBusy(false);
            });
        }

        $("#Button_Register").on("click", performRegister);
        $(document).on("keypress", function (e) {
            if (e.which === 13) performRegister();
        });
    });
</script>

</body>
</html>
