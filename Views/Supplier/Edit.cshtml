@model Supplier
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model?.Id == 0 ? "New Supplier" : "Edit Supplier";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-10">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-4">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-truck me-2 text-primary"></i>
                        @(Model?.Id == 0 ? "Create Supplier" : "Edit Supplier")
                    </h4>
                    <small class="text-muted">
                        Manage supplier contact and business information
                    </small>
                </div>

                <div class="card-body px-4 py-4">
                    <form method="post" novalidate>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                Supplier Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g. ABC Trading Ltd" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactPerson" class="form-label">
                                    Contact Person
                                </label>
                                <input asp-for="ContactPerson" class="form-control" placeholder="Full name" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    Phone Number
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="+233 xxx xxx xxx" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                Email Address
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="supplier@email.com" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label">
                                Business Address
                            </label>
                            <textarea asp-for="Address" rows="3" class="form-control"
                                      placeholder="Street, city, country"></textarea>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-primary px-5">
                                <i class="bi bi-save me-1"></i>
                                Save Supplier
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}